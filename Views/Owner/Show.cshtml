@model Owner
<h1>View For @Model.FullName</h1>
<hr>
<h3>Scheduled Walks</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Dog</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var walk in Model.WalksTaken)
    {
        <tr>
            <td>@walk.StartTime.ToString("d")</td>
            <td>@walk.WalkedDog.Name</td>
        </tr>
    }
    
    </tbody>
</table>
<h4>Update the Owner</h4>
<form asp-action="Update" asp-controller="Owner" asp-route-OwnerId="@Model.OwnerId" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="DOB"></span>
        <label asp-for="DOB"></label>
        <input asp-for="DOB">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>
    <input type="submit" value="Update">
</form>
<hr>
<h4>Delete the Owner</h4>
<a asp-controller="Owner" asp-action="Delete" asp-route-ownerId="@Model.OwnerId"><button>DELETE</button></a>